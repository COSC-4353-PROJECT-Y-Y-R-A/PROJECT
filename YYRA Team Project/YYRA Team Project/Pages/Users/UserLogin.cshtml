@page "{id:int?}"
@model UserLoginModel
@{
    ViewData["Title"] = "Login";

}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.LOGIN_USER.U_Username" class="control-label"></label>
                <input asp-for="@Model.LOGIN_USER.U_Username" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.LOGIN_USER.U_Pass" class="control-label"></label>
                <input asp-for="@Model.LOGIN_USER.U_Pass" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="card-link">
                <a asp-page="/NewRegister/Create">Register</a>
            </div>
        </form>
    </div>

</div>

